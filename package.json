{
  "name": "ts-pg-orm",
  "version": "4.1.1",
  "description": "Typescript PostgreSQL ORM",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "scripts": {
    "clean-unit-tests": "rimraf ./build-test",
    "build-unit-tests": "tsc -p ./tsconfig.test.json",
    "run-unit-tests": "jest",
    "unit-tests": "npm run clean-unit-tests && npm run build-unit-tests && npm run run-unit-tests",
    "lint": "eslint -c .eslintrc.json ./src --ext .ts,.tsx",
    "lint-errors-only": "eslint -c .eslintrc.json ./src --ext .ts,.tsx --quiet",
    "clean": "rimraf ./dist",
    "build-ts": "npm run clean && tsc -p ./tsconfig.dist.json",
    "check": "npm rum lint-errors-only && npm run build-ts && npm run unit-tests",
    "start": "tsc -p ./src/tsconfig.json --watch",
    "clean-examples": "rimraf ./build-examples",
    "build-examples": "tsc -p ./tsconfig.examples.json",
    "run-article-api": "node ./build-examples/examples/articleApi/index.js",
    "run-real-db-test": "node ./build-examples/examples/realDbTest/index.js",
    "article-api": "npm run clean-examples && npm run build-examples && npm run run-article-api",
    "real-db-test": "npm run clean-examples && npm run build-examples && npm run run-real-db-test"
  },
  "repository": "https://github.com/samhuk/ts-pg-orm",
  "author": "",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@samhuk/data-filter": "^1.0.10",
    "@samhuk/data-query": "^1.1.6",
    "simple-pg-client": "^1.0.5"
  },
  "devDependencies": {
    "@types/jest": "^28.1.1",
    "@types/node": "^17.0.19",
    "@types/pg": "^8.6.5",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "babel-jest": "^28.1.1",
    "concurrently": "^7.0.0",
    "env-cmd": "^10.1.0",
    "eslint": "^8.9.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.30.1",
    "jest": "^28.1.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.4",
    "typescript": "^4.5.5"
  }
}
